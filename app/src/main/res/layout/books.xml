<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6B9D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header with time and icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="@android:color/white"
                    android:contentDescription="Search icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sổ cái mặc định"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    app:drawableEndCompat="@android:drawable/arrow_down_float"
                    app:drawableTint="@android:color/white" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_add"
                    app:tint="@android:color/white"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Add icon" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_month"
                    app:tint="@android:color/white"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Month icon" />
            </LinearLayout>

            <!-- Quick Menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_menu_mapmode"
                        app:tint="@android:color/white"
                        android:contentDescription="Travel icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Travel"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_menu_report_image"
                        app:tint="@android:color/white"
                        android:contentDescription="Ledger icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sổ cái"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_input_add"
                        app:tint="@android:color/white"
                        android:contentDescription="Add item icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thêm..."
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Financial overview card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header cho chọn tháng và icon ẩn/hiện -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        
                        <!-- Layout chọn tháng/năm -->
                        <LinearLayout
                            android:id="@+id/month_year_picker_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="8dp">
                            
                            <TextView
                                android:id="@+id/tv_selected_month_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6/2025"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                app:drawableEndCompat="@android:drawable/arrow_down_float" />
                        </LinearLayout>

                        <!-- Icon ẩn/hiện số tiền -->
                        <ImageView
                            android:id="@+id/iv_toggle_visibility"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@android:drawable/ic_menu_view"
                            android:contentDescription="Toggle visibility"
                            android:layout_marginStart="16dp"
                            android:padding="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:tint="#616161" />
                    </LinearLayout>

                    <!-- Financial figures -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Total -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_total_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$9,040.94"
                                android:textColor="#4CAF50"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng số"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                app:drawableStartCompat="@android:drawable/ic_menu_sort_by_size"
                                app:drawableTint="#4CAF50" />
                        </LinearLayout>

                        <!-- Income -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_income_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$10,000"
                                android:textColor="#4CAF50"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thu nhập"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                app:drawableStartCompat="@android:drawable/ic_menu_sort_by_size"
                                app:drawableTint="#4CAF50" />
                        </LinearLayout>

                        <!-- Expense -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_expense_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$959.06"
                                android:textColor="#FF5252"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chi tiêu"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                app:drawableStartCompat="@android:drawable/ic_menu_sort_by_size"
                                app:drawableTint="#FF5252" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Daily budget card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_menu_day"
                        android:contentDescription="Daily budget icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="daily (Hàng ngày/1/N)"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10%"
                            android:textSize="12sp"
                            android:textColor="#757575" />

                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progress="10"
                            android:max="100" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$180"
                        android:textSize="16sp"
                        android:textColor="#FF5252"
                        android:textStyle="bold"
                        android:layout_gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Savings goals -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mục tiêu tiết kiệm"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Goals grid -->
            <LinearLayout
                android:id="@+id/ll_goals_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/ll_add_goal"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:layout_margin="4dp"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_add"
                        android:contentDescription="Add goal icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- PHẦN MỚI: ScrollView lịch sử giao dịch -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lịch sử giao dịch"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_search"
                            android:contentDescription="Search transactions" />
                    </LinearLayout>

                    <!-- Container for transactions (Removed inner ScrollView) -->
                    <LinearLayout
                        android:id="@+id/ll_transactions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Giao dịch 1: Chi tiêu -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:contentDescription="Expense icon"
                                android:src="@android:drawable/ic_menu_crop"
                                app:tint="#FF5252" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ăn uống"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ăn trưa với bạn"
                                    android:textColor="#757575"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="18/11/2025 14:30"
                                    android:textColor="#999999"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-50.000 đ"
                                android:textColor="#FF5252"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layout_marginStart="52dp" />

                        <!-- Giao dịch 2: Thu nhập -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center_vertical"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_menu_myplaces"
                                app:tint="#4CAF50"
                                android:contentDescription="Income icon" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lương"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lương tháng 11"
                                    android:textSize="12sp"
                                    android:textColor="#757575" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="01/11/2025 09:00"
                                    android:textSize="10sp"
                                    android:textColor="#999999" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+10.000.000 đ"
                                android:textColor="#4CAF50"
                                android:textStyle="bold"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layout_marginStart="52dp" />

                        <!-- Giao dịch 3: Chi tiêu -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center_vertical"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_menu_compass"
                                app:tint="#FF5252"
                                android:contentDescription="Transport icon" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Giao thông"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Xe ôm"
                                    android:textSize="12sp"
                                    android:textColor="#757575" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="17/11/2025 08:15"
                                    android:textSize="10sp"
                                    android:textColor="#999999" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-25.000 đ"
                                android:textColor="#FF5252"
                                android:textStyle="bold"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layout_marginStart="52dp" />

                        <!-- Giao dịch 4: Chi tiêu -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center_vertical"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_menu_gallery"
                                app:tint="#FF5252"
                                android:contentDescription="Shopping icon" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mua sắm"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Quần áo"
                                    android:textSize="12sp"
                                    android:textColor="#757575" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="16/11/2025 19:45"
                                    android:textSize="10sp"
                                    android:textColor="#999999" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-500.000 đ"
                                android:textColor="#FF5252"
                                android:textStyle="bold"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layout_marginStart="52dp" />

                        <!-- Giao dịch 5: Thu nhập -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center_vertical"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_menu_send"
                                app:tint="#4CAF50"
                                android:contentDescription="Bonus icon" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Thưởng"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Thưởng cuối năm"
                                    android:textSize="12sp"
                                    android:textColor="#757575" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15/11/2025 16:00"
                                    android:textSize="10sp"
                                    android:textColor="#999999" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+5.000.000 đ"
                                android:textColor="#4CAF50"
                                android:textStyle="bold"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layout_marginStart="52dp" />

                    </LinearLayout>

                    <!-- Footer: Xem tất cả -->
                    <TextView
                        android:id="@+id/tv_see_all_transactions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Xem tất cả →"
                        android:textAlignment="center"
                        android:textColor="#FF6B9D"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/edit"
        app:tint="#FF6B9D"
        app:backgroundTint="@android:color/white"
        app:elevation="6dp"
        app:fabSize="normal" />

    <!-- Bottom navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="#FF6B9D" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sách bỏ túi"
                android:textSize="11sp"
                android:textColor="#FF6B9D"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@android:drawable/ic_menu_view"
                app:tint="#757575" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ví tiền"
                android:textSize="11sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@android:drawable/ic_menu_compass"
                app:tint="#757575" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phân tích"
                android:textSize="11sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_navigation_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#757575" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tôi"
                android:textSize="11sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>