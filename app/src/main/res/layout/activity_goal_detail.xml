<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FF6B9D"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@android:color/white"
            android:contentDescription="@string/goal_detail_close_button_description"
            android:padding="2dp" />

        <TextView
            android:id="@+id/tv_goal_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/goal_detail_title"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/btn_save"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_save"
            app:tint="@android:color/white"
            android:contentDescription="@string/goal_detail_save_button_description"
            android:padding="2dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Progress Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_icon_emoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="48sp"
                        android:text="@string/goal_detail_emoji_car"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_goal_name_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:text="@string/goal_detail_name_display"/>

                    <TextView
                        android:id="@+id/tv_current_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:text="@string/goal_detail_current_target_placeholder"/>

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="0"
                        android:max="100"
                        android:progressTint="#4CAF50"
                        android:backgroundTint="#EEEEEE"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:text="@string/goal_detail_percentage_completed_placeholder"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Thêm tiền và Rút tiền -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="24dp">
                <Button
                    android:id="@+id/btn_add_fund"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/goal_detail_add_fund_button"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginEnd="8dp"/>
                <Button
                    android:id="@+id/btn_withdraw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/goal_detail_withdraw_button"
                    android:backgroundTint="#FF9800"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Edit Fields -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goal_detail_edit_details_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/et_goal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/goal_detail_name_hint"
                android:inputType="textCapSentences"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/edittext_background"/>

            <EditText
                android:id="@+id/et_target_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/goal_detail_target_amount_hint"
                android:inputType="numberDecimal"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/edittext_background"/>
                
            <EditText
                android:id="@+id/et_current_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/goal_detail_current_amount_hint"
                android:inputType="numberDecimal"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/edittext_background"/>

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goal_detail_start_date_placeholder"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goal_detail_end_date_placeholder"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="12dp"/>
            
             <EditText
                android:id="@+id/et_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/goal_detail_note_hint"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:background="@drawable/edittext_background"/>

        </LinearLayout>
    </ScrollView>
    
    <!-- Delete Button -->
    <Button
        android:id="@+id/btn_delete_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goal_detail_delete_button"
        android:textColor="@android:color/white"
        android:backgroundTint="#F44336"
        android:layout_margin="16dp" />

</LinearLayout>