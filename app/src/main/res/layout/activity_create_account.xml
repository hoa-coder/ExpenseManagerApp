<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FF6B9D"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@android:color/white"
            android:padding="4dp"
            android:contentDescription="@string/content_description_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/create_deposit_card_header"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageView
            android:id="@+id/btn_done"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_save"
            app:tint="@android:color/white"
            android:padding="4dp"
            android:contentDescription="@string/content_description_save" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section: Thông tin tài khoản -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_info_section"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:padding="16dp"
                android:background="#F5F5F5" />

            <TextView
                android:id="@+id/tv_account_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_type_deposit_card"
                android:textSize="12sp"
                android:textColor="#999999"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:background="@android:color/white" />

            <!-- Tên tài khoản -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@android:color/white">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:padding="8dp"
                    android:contentDescription="@string/content_description_account_name_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_name"
                        android:textSize="14sp"
                        android:textColor="#212121" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_account_name"
                    android:textSize="14sp"
                    android:textColor="#EC407A"
                    android:textColorHint="#FFCDD2"
                    android:background="@null"
                    android:gravity="end"
                    android:minWidth="150dp"
                    android:inputType="textCapWords"
                    android:importantForAutofill="no" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="68dp" />

            <!-- Số dư ban đầu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@android:color/white">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_report_image"
                    android:padding="8dp"
                    android:contentDescription="@string/content_description_initial_balance_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/initial_balance"
                        android:textSize="14sp"
                        android:textColor="#212121" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_initial_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_initial_balance"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textColor="#EC407A"
                    android:textColorHint="#FFCDD2"
                    android:background="@null"
                    android:gravity="end"
                    android:minWidth="150dp"
                    android:importantForAutofill="no" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="68dp" />

            <!-- Tiền tệ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@android:color/white">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_rotate"
                    android:padding="8dp"
                    android:contentDescription="@string/content_description_currency_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/currency"
                        android:textSize="14sp"
                        android:textColor="#212121" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_select_currency"
                    android:textSize="14sp"
                    android:textColor="#FFCDD2" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    app:tint="#EC407A"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/content_description_currency_more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="68dp" />

            <!-- Biểu tượng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@android:color/white">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:padding="8dp"
                    android:contentDescription="@string/icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon"
                        android:textSize="14sp"
                        android:textColor="#212121" />
                </LinearLayout>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_save"
                    android:padding="6dp"
                    android:contentDescription="@string/content_description_icon_selection" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    app:tint="#EC407A"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/content_description_icon_more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="68dp" />

            <!-- Sử dụng trong số cái hiện tại -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@android:color/white">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_view"
                    android:padding="8dp"
                    android:contentDescription="@string/content_description_switch_balance_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/use_in_current_balance"
                        android:textSize="14sp"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/use_in_current_balance_desc"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_include_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="68dp" />

            <!-- Bao gồm như tài sản trong số hiển tại -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@android:color/white">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:padding="8dp"
                    android:contentDescription="@string/content_description_switch_stats_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/include_in_statistics"
                        android:textSize="14sp"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/include_in_statistics_desc"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_include_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <!-- Section: Ghi chú -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/note_section"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:padding="16dp"
                android:background="#F5F5F5"
                android:layout_marginTop="8dp" />

            <!-- Ghi chú text area -->
            <EditText
                android:id="@+id/et_note"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="@string/hint_note"
                android:textSize="14sp"
                android:textColorHint="#CCCCCC"
                android:background="@android:color/white"
                android:padding="16dp"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:maxLength="30"
                android:importantForAutofill="no" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/char_limit_display"
                android:textSize="12sp"
                android:textColor="#999999"
                android:gravity="end"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:background="@android:color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>