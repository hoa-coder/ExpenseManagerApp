<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseManagerApp">

        <!-- Màn hình chính/sổ sách: Không còn là LAUNCHER -->
        <activity
            android:name=".BooksActivity"
            android:exported="false"> 
        </activity>

        <!-- Màn hình đăng nhập -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- Màn hình chính sau khi đăng nhập: Đặt làm LAUNCHER/MAIN Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Màn hình đăng ký tài khoản -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
            
        <!-- Màn hình thông tin tài khoản (Mới) -->
        <activity
            android:name=".AccountActivity"
            android:exported="false" />

        <!-- Các Activity quản lý tài khoản -->
        <activity
            android:name=".ManageAccountsActivity"
            android:exported="false" />
            
        <!-- Các Activity mới được thêm vào -->
        <activity
            android:name=".AddExpenseActivity"
            android:exported="false" />
        <activity
            android:name=".AddIncomeActivity"
            android:exported="false" />
        <activity
            android:name=".CreateSavingsGoalActivity"
            android:exported="false" />
        <activity
            android:name=".AccountTypesActivity"
            android:exported="false" />
        <activity
            android:name=".CreateAccountActivity"
            android:exported="false" />
        
        <!-- KHAI BÁO THIẾU: GoalDetailActivity -->
        <activity
            android:name=".GoalDetailActivity"
            android:exported="false" />
        <!-- KHAI BÁO THÊM: AnalysisActivity -->
        <activity
            android:name=".AnalysisActivity"
            android:exported="false" />

        <!-- Màn hình Khôi phục mật khẩu (Quên mật khẩu) -->
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false" />
        <!-- Kết thúc các Activity mới được thêm vào -->

    </application>

</manifest>